{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit : {{ product.name }}</h1>

    {% if is_granted("ROLE_ADMIN") %}
        <style>
            .user{
                display: none;
            }
        </style>
        <div class="block-category">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="groupe-button-option">
            <a class="btn btn-sm btn-secondary" href="{{ path('app_shop_admin') }}">Retour aux catégories</a>

            <a class="btn btn-sm btn-secondary" href="{{ path('app_product_index') }}">Retour à la liste</a>

            <a class="btn btn-sm btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

            {{ include('product/_delete_form.html.twig') }}
        </div>

    {% endif %}

    <div class="user">
        <h2>{{ product.name }}</h2>
        <p>{{ product.description }}</p>
        <p>{{ product.price }}</p>
    </div>

{% endblock %}
