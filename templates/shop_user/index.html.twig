{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <div class="blockPage">
        <h1>Achetez des pates !</h1>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            {% for picture in product.gallery %}
                                {% if picture == product.gallery.first %}
                                    <img src="{{ asset ('uploads/images_directory/'~picture.picture) }}" class="card-img-top" alt="{{ product.name }}">
                                {% endif %}
                            {% endfor %}
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-text">{{ product.price }}</p>
                        </div>
                        <div>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                        </div>
                    </div>
                </div>

                {% else %}
                    <tr>
                        <td colspan="5">aucun objet trouv√©</td>
                    </tr>
                {% endfor %}
        </div>
    </div>
{% endblock %}
