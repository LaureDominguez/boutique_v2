{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="user">
    <h1>{{ user.email }}</h1>
    
    <table class="table table-ligh">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-sm btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
</div>
{% endblock %}
