{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="loginPage">
        <div class="block">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

                <label for="inputPassword">Mot de passe</label>
                <input type="password" id="user_password" name="password" class="form-control" required>
                <input type="checkbox" onclick="showPass()"> Afficher le mot de passe<br>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                #}

                <button class="btn btn-lg" type="submit">Connexion</button>
            </form>

            <div>
                <hr>
                <p>Pas de compte ?</p>
                <a class="btn btn-lg" href="{{ path('app_user_new') }}" class="dropdown-item">Cr√©ation</a>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    <script>
        function showPass() {
            var x = document.getElementById("user_password");
            //var img = document.getElementById("showPass");
            if (x.type === "password") {
                    x.type = "text";
                    //img = '<i class="fa-solid fa-eye-slash"></i>';
                } else {
                    x.type = "password";
                    //img = '<i class="fa-solid fa-eye"></i>';
                }
            }
    </script>
{% endblock %}