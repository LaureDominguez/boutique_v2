{% extends 'base.html.twig' %}

{% block title %}Boutique - Admin{% endblock %}

{% block body %}
    <h1>Categorie : {{ category.name }}</h1>
    <div>
        <h2>Gérer la catégorie :</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-lg btn-secondary" href="{{ path('app_shop_admin') }}">Retour à la liste</a>

        <a class="btn btn-lg btn-primary" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>

    <div>
        <h2>Liste des produits liés :</h2>
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products  %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="btn btn-lg btn-primary" href="{{ path('app_product_new') }}">Ajouter un article</a>
    </div>
{% endblock %}
