{% extends 'base.html.twig' %}

{% block title %}Boutique - Admin{% endblock %}

{% block body %}
    <h1>Administrez des pates !</h1>

    <div class="block-category">
        <h2>Toutes les catégories :</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Catégories</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {% for category in categories %}
                    <tr>
                        <th scope="row">{{ category.id }}</th>
                        <td><a href="{{ path('app_category_show', {'id': category.id}) }}">{{ category.name }}</a></td>
                    </tr>
                    

                {% else %}
                    <tr>
                        <td colspan="5">aucun objet trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="add-button">
            <a class="btn btn-sm btn-primary" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>
        </div>
    </div>

    <div class="block-category">
        <h2>Tous les produits :</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="row">#</th>
                    <th scope="row">Nom</th>
                    <th scope="row">Catégorie</th>
                    <th scope="row">Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {% for product in products %}
                    <tr>
                        <th scope="row">{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.category.name }}</td>
                        <td>
                            <td class="groupe-button-pic">
                            <a class="btn btn-sm btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}"><i class="fa-regular fa-eye" title="voir"></i></i></a>
                            <a class="btn btn-sm btn-secondary" href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa-solid fa-pen-to-square" title="modifier"></i></a>
                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can" title="supprimer"></i></button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">aucun objet trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="add-button">
            <a class="btn btn-sm btn-primary" href="{{ path('app_product_new') }}">Ajouter un article</a>
        </div>
    </div>
{% endblock %}


